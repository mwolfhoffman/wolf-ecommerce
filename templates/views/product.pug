extends ../layouts/default

block intro
	.container
		a(href="/products/") Back To Products
		h1.text-center #{data.product.title}

block content
	.container.text-center
		.row
				if data.product.image
					a(href='')
					img(src=data.product.image.url width='160')
				else
					img(src='/images/placeholder.png', width='160')
				p
					b $ #{data.product.price}
				p.
					!{data.product.description}